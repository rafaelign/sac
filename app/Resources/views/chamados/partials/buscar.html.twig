<form class="col s8 offset-s2" action="{{ path('chamados_relatorio') }}" method="post">
    <div class="row">
        <div class="input-field col s6">
            <input name="email" id="email" type="email" class="validate" {% if filtros.email is defined %}value="{{ filtros.email }}" {% endif %} {% if filtrar %}disabled{% endif %}>
            <label for="email">E-mail</label>
        </div>
        <div class="input-field col s6">
            <input name="pedido" id="pedido" type="number" class="validate" {% if filtros.pedido is defined %}value="{{ filtros.pedido }}" {% endif %} {% if filtrar %}disabled{% endif %}>
            <label for="pedido">NÃºmero do Pedido</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s3 offset-s6">
            <button id="btn-limpar-form" class="btn waves-effect waves-light" type="button" {% if filtrar == false %}disabled{% endif %}>
                Limpar
            </button>
        </div>
        <div class="input-field col s3">
            <button class="btn waves-effect waves-light" type="submit" name="filtrar" {% if filtrar %}disabled{% endif %}>
                Filtrar
            </button>
        </div>
    </div>
</form>
